{% extends 'base-back.html.twig' %}
{% block content %}
    <div class="row" style="width: 100%;">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4  class="card-title">Liste Des Evenements</h4>
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                        <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>idMatch</th>
                            <th>nomMatch</th>
                            <th>NomEvent</th>
                            <th>idArtiste</th>
                            <th>Description</th>
                            <th>Action</th>

                        </tr>
                        </thead>
                        <tbody>
                        <tr {% for E in evenement %}>
                            <td>{{ E.id }}</td>
                            <td>{{ E.idMatch }}</td>
                            <td>{{ E.nomMatch }}</td>
                            <td>{{ E.NomEvent }}</td>
                            <td>{{ E.idArtiste }}</td>
                            <td>{{ E.Description }}</td>
                            <td><a href="{{ path('modifierEvenement',{'id':E.id}) }}"><i class="ri-pencil-fill"></i></a><a href="{{ path('deleteEvenement',{'id':E.id}) }}"><i class="ri-delete-bin-fill"></i></a></td>

                        </tr {% endfor %}>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->
    <script>
        $('#datatable-buttons').DataTable()
    </script>
{% endblock %}
